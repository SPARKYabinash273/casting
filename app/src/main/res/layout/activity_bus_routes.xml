<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bus_routes"
    android:background="@drawable/rainy_buses">

    <ScrollView
        android:layout_width="380dp"
        android:layout_height="576dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button22"
                android:layout_width="380dp"
                android:layout_height="75dp"
                android:fontFamily="@font/patua_one"
                android:text="Route no.1 Adayar" />

            <Button
                android:id="@+id/button24"
                android:layout_width="380dp"
                android:layout_height="75dp"
                android:fontFamily="@font/patua_one"
                android:text="Route no.2 CMBT" />

            <Button
                android:id="@+id/button25"
                android:layout_width="380dp"
                android:layout_height="75dp"
                android:fontFamily="@font/patua_one"
                android:text="Route no.4 TBM" />

            <Button
                android:id="@+id/button27"
                android:layout_width="380dp"
                android:layout_height="75dp"
                android:fontFamily="@font/patua_one"
                android:text="Route no.5 cpt" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="309dp"
        android:layout_height="72dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="42dp"
        android:fontFamily="@font/cinzel_decorative"
        android:text="Please Select your desired bus route"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>